  <info>
    <title>Open Engineering Service Bus Documentation</title>

    <releaseinfo>OpenEngSB</releaseinfo>
    <legalnotice>Copyright &#xA9; 2010</legalnotice>

    <authorgroup>
      <author>
        <firstname>OpenEngSB</firstname>
        <surname>Development Team and Contributors</surname>
